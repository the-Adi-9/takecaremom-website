---
interface Badge {
  title: string;
  year?: string;
  org?: string;
}

interface Props {
  title?: string;
  badges?: Badge[];
}

const { title = 'Достижения', badges = [
  { title: 'Получатель государственного гранта', org: 'QazInnovation', year: '2023' },
  { title: '3 место "Лучший проект в сфере здравоохранения"', org: 'Growth Forum Kazakhstan', year: '2024' },
  { title: 'Финалисты акселерационной программы', org: 'Antler Indonesia', year: '2025' },
  { title: 'Победители Equalizer Challenge', org: 'UNFPA' },
  { title: '3 место Youth Leadership and Innovation Award', org: 'MYCP' },
  { title: 'Финалисты UN Women Expo', org: 'UN Women', year: '2025' },
] } = Astro.props;
---

<section class="section-padding gradient-soft relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute top-0 right-0 w-full h-full opacity-30">
    <div class="absolute top-10 right-20 text-[300px] font-bold text-pink-200 select-none pointer-events-none leading-none">M</div>
  </div>

  <div class="container-wide relative z-10">
    {title && (
      <div class="text-center mb-16">
        <span class="badge mb-4">Признание</span>
        <h2 class="heading-2">{title}</h2>
      </div>
    )}
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {badges.map((badge, index) => (
        <div class="bg-white rounded-3xl p-6 shadow-card border border-gray-100/50 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group">
          <div class="flex items-start gap-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-coral-400 to-pink-500 flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <div class="flex-1">
              <p class="font-semibold text-gray-900 mb-1">{badge.title}</p>
              {badge.org && (
                <p class="text-sm text-coral-600 font-medium">{badge.org}</p>
              )}
              {badge.year && (
                <p class="text-xs text-gray-400 mt-2">{badge.year}</p>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
