---

<section class="section-padding bg-surface-50">
  <div class="container-wide">
    {(title || subtitle) && (
      <div class="text-center max-w-2xl mx-auto mb-12">
        {subtitle && <p class="text-coral-600 font-medium mb-2">{subtitle}</p>}
        {title && <h2 class="heading-2">{title}</h2>}
      </div>
    )}
    <div class:list={['grid gap-6', gridCols[columns]]}>
      {features.map((feature) => (
        <div class="card hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 rounded-xl bg-coral-50 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[feature.icon] || icons.heart} />
          </div>
          <h3 class="font-semibold text-lg text-gray-900 mb-2">{feature.title}</h3>
          <p class="text-gray-600 text-sm">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
