---
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');
const basePath = isEnglish ? '/en' : '';
const currentYear = new Date().getFullYear();

const footerLinksRu = {
  ecosystem: [
    { href: '/app', label: 'Приложение' },
    { href: '/community', label: 'Сообщество' },
    { href: '/blog', label: 'Блог' },
    { href: '/podcast', label: 'Подкаст' },
  ],
  company: [
    { href: '/trust', label: 'О нас' },
    { href: '/team', label: 'Команда' },
    { href: '/contact', label: 'Контакты' },
  ],
};

const footerLinksEn = {
  ecosystem: [
    { href: '/en/app', label: 'App' },
    { href: '/en/community', label: 'Community' },
    { href: '/en/blog', label: 'Blog' },
    { href: '/en/podcast', label: 'Podcast' },
  ],
  company: [
    { href: '/en/trust', label: 'About Us' },
    { href: '/en/team', label: 'Team' },
    { href: '/en/contact', label: 'Contact' },
  ],
};

const footerLinks = isEnglish ? footerLinksEn : footerLinksRu;

const socialLinks = [
  {
    href: 'https://instagram.com/takecare_mom',
    label: 'Instagram',
    icon: `<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>`,
  },
  {
    href: 'https://t.me/Zula_Urunova',
    label: 'Telegram',
    icon: `<path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>`,
  },
];

const texts = {
  tagline: isEnglish
    ? 'Ecosystem for parents. You take care of your baby, and we take care of you.'
    : 'Экосистема для родителей. Вы заботитесь о малыше, а мы заботимся о вас.',
  ecosystem: isEnglish ? 'Ecosystem' : 'Экосистема',
  company: isEnglish ? 'Company' : 'Компания',
  contact: isEnglish ? 'Contact' : 'Контакты',
  rights: isEnglish ? 'All rights reserved.' : 'Все права защищены.',
  location: isEnglish ? 'Almaty, Kazakhstan' : 'Алматы, Казахстан',
};
---

<footer class="bg-gray-900 text-gray-300 relative overflow-hidden">
  <!-- Subtle decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-coral-500/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-pink-500/5 rounded-full blur-3xl"></div>

  <div class="container-wide py-16 md:py-20 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-16">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href={basePath || '/'} class="flex items-center gap-3 mb-6">
          <img
            src="/images/logo.jpg"
            alt="Take Care Mom"
            class="w-12 h-12 rounded-full object-cover"
          />
          <span class="font-bold text-xl text-white">Take Care Mom</span>
        </a>
        <p class="text-gray-400 mb-6 leading-relaxed">
          {texts.tagline}
        </p>
        <div class="flex gap-3">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-11 h-11 rounded-full bg-gray-800 hover:bg-coral-500 flex items-center justify-center transition-all duration-300 hover:scale-110"
              aria-label={link.label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" set:html={link.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Ecosystem Links -->
      <div>
        <h3 class="font-bold text-white mb-6 text-lg">{texts.ecosystem}</h3>
        <ul class="space-y-4">
          {footerLinks.ecosystem.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-coral-400 transition-colors flex items-center gap-2 group">
                <span class="w-1 h-1 rounded-full bg-coral-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="font-bold text-white mb-6 text-lg">{texts.company}</h3>
        <ul class="space-y-4">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-coral-400 transition-colors flex items-center gap-2 group">
                <span class="w-1 h-1 rounded-full bg-coral-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-bold text-white mb-6 text-lg">{texts.contact}</h3>
        <ul class="space-y-4">
          <li>
            <a href="mailto:info@takecaremom.net" class="text-gray-400 hover:text-coral-400 transition-colors flex items-center gap-3">
              <svg class="w-5 h-5 text-coral-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              info@takecaremom.net
            </a>
          </li>
          <li>
            <a href="tel:+77477920677" class="text-gray-400 hover:text-coral-400 transition-colors flex items-center gap-3">
              <svg class="w-5 h-5 text-coral-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              +7 747 792 0677
            </a>
          </li>
          <li>
            <a href="https://t.me/Zula_Urunova" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-coral-400 transition-colors flex items-center gap-3">
              <svg class="w-5 h-5 text-coral-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
              </svg>
              @Zula_Urunova
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-16 pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-center items-center gap-6">
      <p class="text-sm text-gray-500">
        &copy; {currentYear} Take Care Mom. {texts.rights}
      </p>
    </div>
  </div>
</footer>
