---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    label: string;
    href: string;
  };
  secondaryCta?: {
    label: string;
    href: string;
  };
  centered?: boolean;
  gradient?: boolean;
}

const {
  title,
  subtitle,
  description,
  primaryCta,
  secondaryCta,
  centered = false,
  gradient = false,
} = Astro.props;
---

<section class:list={[
  'section-padding',
  gradient ? 'gradient-soft' : 'bg-surface-50'
]}>
  <div class:list={[
    'container-wide',
    centered && 'text-center'
  ]}>
    <div class:list={[
      'max-w-3xl',
      centered && 'mx-auto'
    ]}>
      {subtitle && (
        <p class="text-coral-600 font-medium mb-3">{subtitle}</p>
      )}
      <h1 class="heading-1 mb-6 text-balance">{title}</h1>
      {description && (
        <p class="text-lg md:text-xl text-gray-600 mb-8 text-balance">{description}</p>
      )}
      {(primaryCta || secondaryCta) && (
        <div class:list={[
          'flex flex-wrap gap-4',
          centered && 'justify-center'
        ]}>
          {primaryCta && (
            <a href={primaryCta.href} class="btn-primary">
              {primaryCta.label}
            </a>
          )}
          {secondaryCta && (
            <a href={secondaryCta.href} class="btn-secondary">
              {secondaryCta.label}
            </a>
          )}
        </div>
      )}
    </div>
    <slot />
  </div>
</section>
