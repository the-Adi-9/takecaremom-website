---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
  features: string[];
}

const { title, description, href, icon, features } = Astro.props;

const icons: Record<string, string> = {
  blog: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />`,
  community: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  app: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
};
---

<a href={href} class="card group hover:shadow-lg transition-all border border-transparent hover:border-coral-200 flex flex-col h-full">
  <div class="w-14 h-14 rounded-xl bg-coral-50 group-hover:bg-coral-100 flex items-center justify-center mb-4 transition-colors">
    <svg class="w-7 h-7 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[icon] || icons.blog} />
  </div>
  <h3 class="font-semibold text-xl text-gray-900 mb-2 group-hover:text-coral-600 transition-colors">
    {title}
  </h3>
  <p class="text-gray-600 mb-4 flex-grow">{description}</p>
  <ul class="space-y-2">
    {features.map((feature) => (
      <li class="flex items-center gap-2 text-sm text-gray-500">
        <svg class="w-4 h-4 text-coral-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {feature}
      </li>
    ))}
  </ul>
  <div class="mt-6 pt-4 border-t border-gray-100">
    <span class="text-coral-600 font-medium text-sm group-hover:underline">
      Подробнее &rarr;
    </span>
  </div>
</a>
