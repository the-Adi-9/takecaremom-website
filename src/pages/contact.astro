---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

const contactMethods = [
  {
    title: 'Email',
    value: 'info@takecaremom.net',
    href: 'mailto:info@takecaremom.net',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
    description: 'Для общих вопросов и предложений',
  },
  {
    title: 'Телефон',
    value: '+7 747 792 0677',
    href: 'tel:+77477920677',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />`,
    description: 'Для срочных вопросов',
  },
  {
    title: 'Telegram',
    value: '@Zula_Urunova',
    href: 'https://t.me/Zula_Urunova',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />`,
    description: 'Для быстрой связи с основателем',
  },
  {
    title: 'Instagram',
    value: '@takecare_mom',
    href: 'https://instagram.com/takecare_mom',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
    description: 'Следите за новостями',
  },
];

const partnershipReasons = [
  'Размещение рекламы в блоге и приложении',
  'Спонсорство мероприятий',
  'Совместные проекты и коллаборации',
  'Обзоры детских центров и продукции',
  'Участие в подкасте',
];
---

<BaseLayout
  title="Контакты"
  description="Свяжитесь с командой Take Care Mom: email, телефон, Telegram. Открыты для сотрудничества."
>
  <!-- Hero -->
  <Hero
    title="Свяжитесь с нами"
    subtitle="Контакты"
    description="Мы всегда рады ответить на ваши вопросы, предложения о сотрудничестве или просто пообщаться."
    centered={true}
    gradient={true}
  />

  <!-- Contact methods -->
  <section class="section-padding bg-white">
    <div class="container-wide">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {contactMethods.map((method) => (
          <a
            href={method.href}
            target={method.href.startsWith('http') ? '_blank' : undefined}
            rel={method.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            class="card group hover:shadow-lg transition-all hover:border-coral-200 border border-transparent"
          >
            <div class="w-12 h-12 rounded-xl bg-coral-50 group-hover:bg-coral-100 flex items-center justify-center mb-4 transition-colors">
              <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={method.icon} />
            </div>
            <h3 class="font-semibold text-gray-900 mb-1">{method.title}</h3>
            <p class="text-coral-600 font-medium mb-2 group-hover:underline">{method.value}</p>
            <p class="text-sm text-gray-500">{method.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Partnership -->
  <section class="section-padding bg-surface-50">
    <div class="container-narrow">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-coral-600 font-medium mb-2">Партнерам</p>
          <h2 class="heading-2 mb-6">Сотрудничество</h2>
          <p class="text-gray-600 mb-6">
            Мы открыты для сотрудничества с брендами и компаниями, чьи ценности совпадают с нашими.
            Если вы хотите стать партнером Take Care Mom, свяжитесь с нами.
          </p>
          <a href="mailto:info@takecaremom.net" class="btn-primary">
            Написать о сотрудничестве
          </a>
        </div>
        <div class="bg-white rounded-2xl p-8 shadow-card">
          <h3 class="font-semibold text-lg text-gray-900 mb-4">Варианты сотрудничества</h3>
          <ul class="space-y-3">
            {partnershipReasons.map((reason) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-coral-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600">{reason}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick links -->
  <section class="section-padding bg-surface-50">
    <div class="container-narrow">
      <h2 class="heading-2 text-center mb-12">Полезные ссылки</h2>
      <div class="grid sm:grid-cols-3 gap-6">
        <a href="/app" class="card text-center group hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-coral-50 group-hover:bg-coral-100 flex items-center justify-center transition-colors">
            <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-coral-600 transition-colors">Приложение</h3>
          <p class="text-sm text-gray-500 mt-1">Скачать бесплатно</p>
        </a>
        <a href="/community" class="card text-center group hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-coral-50 group-hover:bg-coral-100 flex items-center justify-center transition-colors">
            <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-coral-600 transition-colors">Сообщество</h3>
          <p class="text-sm text-gray-500 mt-1">Присоединиться</p>
        </a>
        <a href="/trust" class="card text-center group hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-coral-50 group-hover:bg-coral-100 flex items-center justify-center transition-colors">
            <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-coral-600 transition-colors">О нас</h3>
          <p class="text-sm text-gray-500 mt-1">Узнать больше</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
