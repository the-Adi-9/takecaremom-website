---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import FeatureGrid from '../../components/FeatureGrid.astro';
import CTABlock from '../../components/CTABlock.astro';

const features = [
  {
    icon: 'tracker',
    title: 'Development Trackers',
    description: 'Track sleep, nutrition and key milestones of your child\'s development. Progress visualization in convenient charts.',
  },
  {
    icon: 'calendar',
    title: 'Vaccination Calendar',
    description: 'Never miss important vaccinations. Reminders about upcoming vaccinations according to the national calendar.',
  },
  {
    icon: 'ai',
    title: 'AI Assistant',
    description: 'Personalized recommendations based on your child\'s data. Answers to questions anytime.',
  },
  {
    icon: 'community',
    title: 'Mom Community',
    description: 'Connect with other parents, participate in events and share experiences right in the app.',
  },
  {
    icon: 'sound',
    title: 'White Noise',
    description: 'Collection of soothing sounds for peaceful baby sleep. Auto-off timer included.',
  },
  {
    icon: 'chat',
    title: 'Specialist Chats',
    description: 'Consultations with pediatricians, psychologists and nutritionists. Get professional advice quickly.',
  },
];

const reviews = [
  {
    text: 'Super app for parents! Articles, various trackers, even white noise and all in one place! But the best is the AI assistant, never seen anything like it. Highly recommend.',
    rating: 5,
  },
  {
    text: 'Great app for parents, intuitive interface, no visual noise. Curated content, excellent article quality.',
    rating: 5,
  },
  {
    text: 'You can immediately feel that the app was created by moms for moms. So many useful tips. A must-download.',
    rating: 5,
  },
  {
    text: 'Really like that there are useful trackers, many helpful sections for moms. Love that you can track feeding and sleep.',
    rating: 5,
  },
];
---

<BaseLayout
  title="App"
  description="TakeCareMom SuperApp: development trackers, vaccination calendar, AI assistant, mom community and white noise in one app."
  lang="en"
>
  <!-- Hero -->
  <Hero
    title="SuperApp for Caring Parents"
    subtitle="App"
    description="All tools for tracking your child's health and development in one place. Available in three languages: Kazakh, Russian and English."
    primaryCta={{ label: 'App Store', href: 'https://apps.apple.com/us/app/take-care-mom-%D1%80%D0%B0%D0%B7%D0%B2%D0%B8%D1%82%D0%B8%D0%B5-%D1%80%D0%B5%D0%B1%D0%B5%D0%BD%D0%BA%D0%B0/id6479609535' }}
    secondaryCta={{ label: 'Google Play', href: 'https://play.google.com/store/apps/details?id=net.takecaremom.android&hl=en' }}
    gradient={true}
  >
    <!-- App Store Badges -->
    <div class="mt-12 flex justify-center gap-4 flex-wrap">
      <a
        href="https://apps.apple.com/us/app/take-care-mom-%D1%80%D0%B0%D0%B7%D0%B2%D0%B8%D1%82%D0%B8%D0%B5-%D1%80%D0%B5%D0%B1%D0%B5%D0%BD%D0%BA%D0%B0/id6479609535"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-black text-white px-5 py-3 rounded-xl hover:bg-gray-800 transition-colors"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <div class="text-left">
          <div class="text-xs opacity-80">Download on</div>
          <div class="text-sm font-semibold">App Store</div>
        </div>
      </a>
      <a
        href="https://play.google.com/store/apps/details?id=net.takecaremom.android&hl=en"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-black text-white px-5 py-3 rounded-xl hover:bg-gray-800 transition-colors"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M3 20.5v-17c0-.83.67-1.5 1.5-1.5.31 0 .61.1.86.28l12.85 8.5c.53.35.79.96.79 1.47 0 .51-.26 1.12-.79 1.47l-12.85 8.5c-.25.18-.55.28-.86.28-.83 0-1.5-.67-1.5-1.5z"/>
        </svg>
        <div class="text-left">
          <div class="text-xs opacity-80">Get it on</div>
          <div class="text-sm font-semibold">Google Play</div>
        </div>
      </a>
    </div>
  </Hero>

  <!-- Features -->
  <FeatureGrid
    title="Everything a Parent Needs"
    subtitle="Features"
    features={features}
  />

  <!-- Languages -->
  <section class="section-padding bg-white">
    <div class="container-narrow text-center">
      <h2 class="heading-2 mb-8">Available in Three Languages</h2>
      <div class="flex justify-center gap-8">
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full bg-surface-100 flex items-center justify-center mb-2 text-2xl">
            ðŸ‡°ðŸ‡¿
          </div>
          <span class="text-sm text-gray-600">Kazakh</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full bg-surface-100 flex items-center justify-center mb-2 text-2xl">
            ðŸ‡·ðŸ‡º
          </div>
          <span class="text-sm text-gray-600">Russian</span>
        </div>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 rounded-full bg-surface-100 flex items-center justify-center mb-2 text-2xl">
            ðŸ‡ºðŸ‡¸
          </div>
          <span class="text-sm text-gray-600">English</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Reviews -->
  <section class="section-padding bg-surface-50">
    <div class="container-wide">
      <h2 class="heading-2 text-center mb-12">User Reviews</h2>
      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {reviews.map((review) => (
          <div class="card">
            <div class="flex gap-1 mb-3">
              {Array.from({ length: review.rating }).map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-gray-600">{review.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTABlock
    title="Download the App for Free"
    description="Join over 20,000 parents who already use TakeCareMom."
    primaryCta={{ label: 'Download Now', href: 'https://apps.apple.com/us/app/take-care-mom-%D1%80%D0%B0%D0%B7%D0%B2%D0%B8%D1%82%D0%B8%D0%B5-%D1%80%D0%B5%D0%B1%D0%B5%D0%BD%D0%BA%D0%B0/id6479609535' }}
    variant="default"
  />
</BaseLayout>
