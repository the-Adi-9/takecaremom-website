---
import BaseLayout from '../layouts/BaseLayout.astro';
import BadgeWall from '../components/BadgeWall.astro';
import PressList from '../components/PressList.astro';

const APPSTORE_URL = 'https://apps.apple.com/us/app/take-care-mom-%D1%80%D0%B0%D0%B7%D0%B2%D0%B8%D1%82%D0%B8%D0%B5-%D1%80%D0%B5%D0%B1%D0%B5%D0%BD%D0%BA%D0%B0/id6479609535';
const PLAYSTORE_URL = 'https://play.google.com/store/apps/details?id=net.takecaremom.android&hl=en';

const pillars = [
  {
    title: 'Блог',
    description: 'Платформа с экспертными материалами для родителей',
    href: '/blog',
    icon: 'blog',
    features: [
      'Материалы от врачей и детских специалистов',
      'Обзоры детских центров и продукции',
      'Просветительская работа',
    ],
  },
  {
    title: 'Сообщество',
    description: 'Пространство поддержки, общения и обмена опытом',
    href: '/community',
    icon: 'community',
    features: [
      'Тематические чаты',
      'Еженедельные розыгрыши и мероприятия',
      'Группа психологической поддержки',
    ],
  },
  {
    title: 'Приложение',
    description: 'SuperApp для отслеживания развития и здоровья ребенка',
    href: '/app',
    icon: 'app',
    features: [
      'Трекеры сна, питания и развития',
      'Календарь вакцинации',
      'ИИ-ассистент с рекомендациями',
    ],
  },
];

const pillarIcons = {
  blog: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />`,
  community: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  app: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
};
---

<BaseLayout title="Главная">
  <!-- Hero Section with decorative elements -->
  <section class="relative overflow-hidden gradient-hero min-h-[90vh] flex items-center">
    <!-- Decorative corner shapes -->
    <div class="corner-shape-top-right hidden md:block"></div>
    <div class="corner-shape-bottom-left hidden md:block"></div>

    <!-- Decorative curved lines -->
    <div class="absolute top-20 right-20 w-40 h-40 border-2 border-white/40 rounded-full hidden lg:block"></div>
    <div class="absolute bottom-40 left-10 w-24 h-24 border-2 border-white/30 rounded-full hidden lg:block"></div>

    <!-- Decorative blobs -->
    <div class="blob blob-1 -top-20 -right-20 hidden md:block"></div>
    <div class="blob blob-2 bottom-0 left-1/4 hidden md:block"></div>

    <div class="container-wide relative z-10 py-20">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Text content -->
        <div class="text-center lg:text-left">
          <span class="badge mb-6">Экосистема для родителей</span>
          <h1 class="heading-1 mb-6 text-balance">
            Take Care Mom
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-xl mx-auto lg:mx-0">
            Экосистема для родителей. Вы заботитесь о малыше, а мы заботимся о вас.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/app" class="btn-primary">
              Скачать приложение
            </a>
            <a href="https://t.me/takecaremomcommunity" target="_blank" rel="noopener noreferrer" class="btn-secondary">
              Присоединиться к сообществу
            </a>
          </div>
        </div>

        <!-- Logo/Image -->
        <div class="relative flex justify-center lg:justify-end">
          <div class="relative">
            <!-- Decorative circle background -->
            <div class="absolute inset-0 bg-coral-200 rounded-full scale-110 blur-2xl opacity-60"></div>
            <!-- Logo image -->
            <img
              src="/images/logo.jpg"
              alt="Take Care Mom - руки мамы и малыша"
              class="relative w-72 h-72 md:w-96 md:h-96 rounded-full shadow-2xl object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- Three Pillars with enhanced design -->
  <section class="section-padding bg-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute top-0 left-0 w-full h-full opacity-50">
      <div class="absolute top-20 left-10 text-[400px] font-bold text-pink-100 select-none pointer-events-none leading-none">M</div>
    </div>

    <div class="container-wide relative z-10">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="badge mb-4">Наша экосистема</span>
        <h2 class="heading-2 mb-4">Три способа получить поддержку</h2>
        <p class="text-lg text-gray-600">
          Выберите удобный способ взаимодействия с нашей экосистемой
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {pillars.map((pillar) => (
          <a href={pillar.href} class="card-hover group">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-coral-400 to-pink-500 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={pillarIcons[pillar.icon]} />
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-coral-600 transition-colors">
              {pillar.title}
            </h3>
            <p class="text-gray-600 mb-6">{pillar.description}</p>
            <ul class="space-y-3">
              {pillar.features.map((feature) => (
                <li class="flex items-start gap-3 text-sm text-gray-500">
                  <svg class="w-5 h-5 text-coral-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <div class="mt-8 pt-6 border-t border-gray-100 flex items-center text-coral-600 font-semibold group-hover:gap-3 gap-2 transition-all">
              Подробнее
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- App Preview Section -->
  <section class="section-padding gradient-soft relative overflow-hidden">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="badge mb-4">SuperApp</span>
          <h2 class="heading-2 mb-6">Все что нужно родителю в одном приложении</h2>
          <p class="text-lg text-gray-600 mb-8">
            Трекеры сна, питания и развития ребенка, календарь вакцинации, ИИ-ассистент для персонализированных рекомендаций, белый шум и сообщество мам.
          </p>

          <div class="grid sm:grid-cols-2 gap-4 mb-8">
            <div class="flex items-center gap-3 p-4 bg-white rounded-2xl shadow-sm">
              <div class="w-10 h-10 rounded-xl bg-coral-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Трекеры развития</span>
            </div>
            <div class="flex items-center gap-3 p-4 bg-white rounded-2xl shadow-sm">
              <div class="w-10 h-10 rounded-xl bg-coral-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Календарь вакцинации</span>
            </div>
            <div class="flex items-center gap-3 p-4 bg-white rounded-2xl shadow-sm">
              <div class="w-10 h-10 rounded-xl bg-coral-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">ИИ-ассистент</span>
            </div>
            <div class="flex items-center gap-3 p-4 bg-white rounded-2xl shadow-sm">
              <div class="w-10 h-10 rounded-xl bg-coral-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
                </svg>
              </div>
              <span class="font-medium text-gray-900">Белый шум</span>
            </div>
          </div>

          <div class="flex flex-wrap gap-4">
            <a href={APPSTORE_URL} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-black text-white px-5 py-3 rounded-xl hover:bg-gray-800 transition-colors">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              <div class="text-left">
                <div class="text-xs opacity-80">Загрузите в</div>
                <div class="text-sm font-semibold">App Store</div>
              </div>
            </a>
            <a href={PLAYSTORE_URL} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-black text-white px-5 py-3 rounded-xl hover:bg-gray-800 transition-colors">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 20.5v-17c0-.83.67-1.5 1.5-1.5.31 0 .61.1.86.28l12.85 8.5c.53.35.79.96.79 1.47 0 .51-.26 1.12-.79 1.47l-12.85 8.5c-.25.18-.55.28-.86.28-.83 0-1.5-.67-1.5-1.5z"/>
              </svg>
              <div class="text-left">
                <div class="text-xs opacity-80">Доступно в</div>
                <div class="text-sm font-semibold">Google Play</div>
              </div>
            </a>
          </div>
        </div>

        <!-- App mockup -->
        <div class="relative flex justify-center">
          <div class="relative w-72 md:w-80">
            <!-- Phone frame -->
            <div class="bg-gray-900 rounded-[3rem] p-3 shadow-2xl">
              <div class="bg-white rounded-[2.5rem] overflow-hidden">
                <img src="/images/screens/intro_app.png" alt="Take Care Mom приложение" class="w-full" loading="lazy" />
              </div>
            </div>
            <!-- Decorative elements -->
            <div class="absolute -top-4 -right-4 w-20 h-20 bg-coral-200 rounded-full blur-xl opacity-60"></div>
            <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-pink-200 rounded-full blur-xl opacity-60"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Community Section -->
  <section class="section-padding bg-white relative overflow-hidden">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Community mockup -->
        <div class="order-2 lg:order-1 relative flex justify-center">
          <div class="relative w-72 md:w-80">
            <!-- Phone frame -->
            <div class="bg-gray-900 rounded-[3rem] p-3 shadow-2xl">
              <div class="bg-white rounded-[2.5rem] overflow-hidden">
                <img src="/images/screens/community_chats.png" alt="Сообщество Take Care Mom" class="w-full" loading="lazy" />
              </div>
            </div>
            <!-- Decorative elements -->
            <div class="absolute -top-4 -left-4 w-20 h-20 bg-pink-200 rounded-full blur-xl opacity-60"></div>
            <div class="absolute -bottom-4 -right-4 w-16 h-16 bg-coral-200 rounded-full blur-xl opacity-60"></div>
          </div>
        </div>

        <div class="order-1 lg:order-2">
          <span class="badge mb-4">Сообщество</span>
          <h2 class="heading-2 mb-6">Самое большое сообщество родителей в Казахстане</h2>
          <p class="text-lg text-gray-600 mb-8">
            Наше сообщество мам это пространство поддержки, общения и обмена опытом. Мы объединяем мам, чтобы вместе делиться радостями и трудностями воспитания.
          </p>

          <ul class="space-y-4 mb-8">
            <li class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-full bg-coral-100 flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-gray-700">Тематические чаты по интересам</span>
            </li>
            <li class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-full bg-coral-100 flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-gray-700">Еженедельные розыгрыши и мероприятия</span>
            </li>
            <li class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-full bg-coral-100 flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-coral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-gray-700">Созвоны с врачами и специалистами</span>
            </li>
          </ul>

          <a href="https://t.me/takecaremomcommunity" target="_blank" rel="noopener noreferrer" class="btn-primary">
            Присоединиться к сообществу
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Achievements -->
  <BadgeWall title="Признание и награды" />

  <!-- Press Mentions -->
  <PressList title="СМИ о нас" />

  <!-- Team Preview -->
  <section class="section-padding gradient-soft relative overflow-hidden">
    <div class="container-wide">
      <div class="text-center mb-16">
        <span class="badge mb-4">Команда</span>
        <h2 class="heading-2 mb-4">Люди, которые создают Take Care Mom</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="card text-center">
          <div class="w-32 h-32 rounded-full mx-auto mb-4 overflow-hidden shadow-lg">
            <img src="/images/team/Zulfiya.png" alt="Зульфия Урунова" class="w-full h-full object-cover" loading="lazy" />
          </div>
          <h3 class="text-xl font-bold text-gray-900">Зульфия Урунова</h3>
          <p class="text-coral-600 font-medium">CEO</p>
          <p class="text-sm text-gray-500 mt-1">ex-Microsoft</p>
        </div>
        <div class="card text-center">
          <div class="w-32 h-32 rounded-full mx-auto mb-4 overflow-hidden shadow-lg">
            <img src="/images/team/Zhaniya.png" alt="Жания Айтбаева" class="w-full h-full object-cover" loading="lazy" />
          </div>
          <h3 class="text-xl font-bold text-gray-900">Жания Айтбаева</h3>
          <p class="text-coral-600 font-medium">CFO</p>
          <p class="text-sm text-gray-500 mt-1">ex-KPMG</p>
        </div>
        <div class="card text-center">
          <div class="w-32 h-32 rounded-full mx-auto mb-4 overflow-hidden shadow-lg">
            <img src="/images/team/Aigul.png" alt="Айгуль Алгожина" class="w-full h-full object-cover" loading="lazy" />
          </div>
          <h3 class="text-xl font-bold text-gray-900">Айгуль Алгожина</h3>
          <p class="text-coral-600 font-medium">Психиатр</p>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="/team" class="btn-secondary">
          Узнать больше о команде
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="relative overflow-hidden">
    <div class="gradient-coral py-20 md:py-32 relative">
      <!-- Decorative elements -->
      <div class="corner-shape-top-right opacity-20"></div>
      <div class="absolute top-10 left-10 w-32 h-32 border-2 border-white/20 rounded-full"></div>
      <div class="absolute bottom-10 right-20 w-20 h-20 border-2 border-white/20 rounded-full"></div>

      <div class="container-narrow relative z-10 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Присоединяйтесь к сообществу мам
        </h2>
        <p class="text-xl text-white/80 mb-10 max-w-2xl mx-auto">
          Более 20 000 родителей уже с нами. Получайте поддержку, делитесь опытом и находите ответы на важные вопросы.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/app" class="btn bg-white text-coral-600 hover:bg-gray-100">
            Скачать приложение
          </a>
          <a href="https://t.me/takecaremomcommunity" target="_blank" rel="noopener noreferrer" class="btn border-2 border-white text-white hover:bg-white/10">
            Присоединиться к сообществу
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
